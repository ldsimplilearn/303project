{
   // "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
   "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deployment-suffix": {
            "defaultValue": "RandEnt",
            "type": "String",
            "metadata": {
                "description": "Specify the prefix for the resources."
            }
        },
        "deployment-location": {
            "defaultValue": "eastus",
            "type": "String",
            "allowedValues": [
                "eastus",
                "eastus2",
                "westus",
                "westus2",
                "centralus"
            ],
            "metadata": {
                "description": "Specify the location for the resources."
            }
        },
        "adminUsername": {
            "defaultValue": "azureuser",
            "type": "String",
            "metadata": {
                "description": "Specify the administrator user name."
            }
        },
        "adminPassword": {
            "defaultValue": "Password1234",
            "type": "String",
            "metadata": {
                "description": "Specify the administrator user password."
            }
        },
        "deployment-env-tag": {
            "defaultValue": "test",
            "type": "String",
            "metadata": {
                "description": "Specify the environment tag for the resources."
            }
        }
    },
    "variables": {
        //"resource-group_name": "[concat(toLower(parameters('suffix')), '-rg')]", 
        "virtualMachines_RandEnt_vm_name": "[concat(toLower(parameters('deployment-suffix')), '-vm')]",
        "networkInterfaces_randent_vm_nic_name": "[concat(toLower(parameters('deployment-suffix')), '-vm-nic')]",
        "publicIPAddresses_RandEnt_vm_ip_name": "[concat(toLower(parameters('deployment-suffix')), '-ip')]",
        "virtualNetworks_RandEnt_rg_vnet_name": "[concat(toLower(parameters('deployment-suffix')), '-vnet')]",
        "networkSecurityGroups_RandEnt_vm_nsg_name": "[concat(toLower(parameters('deployment-suffix')), '-nsg')]"
    },
    "resources": [
        // {
        //     "type": "Microsoft.Resources/resourceGroups",
        //     "apiVersion": "2020-10-01",
        //     "name": "[variables('resource-group_name')]",
        //     "location": "[parameters('deployment-location')]",
        //     "properties": {}
        // },

        //Deploy storage account
        {
            "name": "storage-template",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworks_RandEnt_rg_vnet_name'))]" 
            ],
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "RandEnt-storage-template.json"
                },
                "parameters": {
                    "deployment-suffix": { "value": "[parameters('deployment-suffix')]" },
                    "deployment-location": { "value": "[parameters('deployment-location')]" },
                    "allowed_virtualNetworks_vnet_externalid": { "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworks_RandEnt_rg_vnet_name'))]" },
                    "allowed_virtualNetworks_vnet_subnet": { "value": "default" },
                    "deployment-env-tag": { "value": "[parameters('deployment-env-tag')]" }

                }

            }
        },

        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-08-01",
            "name": "[variables('networkSecurityGroups_RandEnt_vm_nsg_name')]",
            "location": "[parameters('deployment-location')]",
            "tags": {
                "Env": "[parameters('deployment-env-tag')]"
            },
            "properties": {
                "securityRules": [
                    // {
                    //     "name": "RDP",
                    //     "properties": {
                    //         "protocol": "TCP",
                    //         "sourcePortRange": "*",
                    //         "destinationPortRange": "3389",
                    //         "sourceAddressPrefix": "*",
                    //         "destinationAddressPrefix": "*",
                    //         "access": "Allow",
                    //         "priority": 300,
                    //         "direction": "Inbound",
                    //         "sourcePortRanges": [],
                    //         "destinationPortRanges": [],
                    //         "sourceAddressPrefixes": [],
                    //         "destinationAddressPrefixes": []
                    //     }
                    // }
                    {
                        "name": "default-allow-ssh",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-08-01",
            "name": "[variables('publicIPAddresses_RandEnt_vm_ip_name')]",
            "location": "[parameters('deployment-location')]",
            "tags": {
                "Env": "[parameters('deployment-env-tag')]"
            },
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            },
            "zones": [
                "1"
            ],
            "properties": {
                // "ipAddress": "20.51.255.20",
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                // "idleTimeoutInMinutes": 4,
                "ipTags": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-08-01",
            "name": "[variables('virtualNetworks_RandEnt_rg_vnet_name')]",
            "location": "[parameters('deployment-location')]",
            "tags": {
                "Env": "[parameters('deployment-env-tag')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false
            }
        },




